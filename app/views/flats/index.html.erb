<h1 class="display-6" style="text-align: center;">Behold these mighty flats!</h1>

<div class="card-group">
  <% @flats.each do |flat| %>
    <div class="card">
      <%# <img src="..." class="card-img-top" alt="..."> %>
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><%= flat.description %></p>
        <p class="card-text"><small class="text-muted"><%= flat.address %></small></p>
        <p class="card-text">🧛‍♀️<%= flat.number_of_guests %>  💲<%= flat.price_per_night %></p>
      </div>
    </div>
  <% end %>
</div>
